<h1>Entries</h1>

  <table class='table entries-table'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th>Time (minutes)</th>
      </tr>
    </thead>
    <tbody class="entries">
      <% @entries.each do |entry| %>
        <tr>
          <td><%= entry.date %></td>
          <td><%= entry.description %></td>
          <td><%= entry.category_name %></td>
          <td><%= entry.value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
