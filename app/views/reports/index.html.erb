<h1>Reports</h1>

<div class="daily-report">
  <h2>Daily Report</h2>

  <table class='table'>
    <thead>
      <tr>
        <th>Date</th>
        <th>Description</th>
        <th>Category</th>
        <th>Time (minutes)</th>
      </tr>
    </thead>
    <tbody>
      <% @presenter.entries_day.each do |entry| %>
        <tr>
          <td><%= entry.date %></td>
          <td><%= entry.description %></td>
          <td><%= entry.category_name %></td>
          <td><%= entry.value %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>Daily Totals</h2>
  <table class="daily-totals table">
    <thead>
      <tr>
        <th>Category</th>
        <th>Time (minutes)</th>
      </tr>
    </thead>
    <tbody>
      <tr><th>Total</th>
        <th><%= @presenter.total_time_day %></th>
      </tr>
      <% @presenter.categories_times_day.each do |key, value| %>
        <tr>
          <td><%= Category.find(key).name %></td>
          <td><%= value %> </td>
        </tr>
      <% end %>
    </tbody>
 <table>

</div>
